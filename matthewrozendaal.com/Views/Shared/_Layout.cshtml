<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="images/seniorphoto.jpg" class="img-rounded" height="50" width="50">

                <a class="navbar-brand" href="index.html">Matthew Rozendaal</a>
            </div>
            <!-- content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li><a href="index.html">Home</a></li>
                    <li><a href="about/about.html">About</a></li>
                    <li class="dropdown">
                        <a href="languages/languages.html" class="dropdown-toggle " data-toggle="dropdown black">Languages <b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="languages/cplusplus/cplusplus.html">C++</a></li>
                        </ul>
                    </li>
                    <li><a href="other/resume.html">Resume</a></li>
                    <li>@Html.ActionLink("Santa Helper", "SantaLogin", "Account")</li>
                </ul>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>