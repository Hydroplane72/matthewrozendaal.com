@model matthewrozendaal.com.Areas.KidsList.Models.Account

@{
    ViewBag.Title = "SantaLogin";
    Layout = "~/Areas/KidsList/Views/Shared/_ParentsLayout.cshtml";
}

<h2 class="text-center">SantaLogin</h2>

<div class="container">
    <div class="login-container">
        <div id="output"></div>
        <div class="avatar"></div>
        <div class="form-box">
            @using (Html.BeginForm(new { controller = "Account", area = "KidsList/Account/SantaLogin", action = "SantaLogin" }))
        {
            @Html.AntiForgeryToken()
            <input name="username" type="text" placeholder="username">
            <input type="password" placeholder="password">
            <button class="btn btn-info btn-block login" type="submit">Login</button>
    }

        </div>
        @Html.ActionLink("New User", "SantaCreate", "Account")
    </div>
</div>